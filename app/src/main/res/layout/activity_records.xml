<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_records"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_menu"
    tools:context="alex.flappycenas.RecordsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:id="@+id/LinearScores">

        <TextView
            android:text="Recordes :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPrimeiro"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="31dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewPrimeiro"
            android:layout_toRightOf="@+id/textViewPrimeiro"
            android:layout_toEndOf="@+id/textViewPrimeiro"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/textViewSegundo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewSegundo"
            android:layout_alignRight="@+id/textViewSegundo"
            android:layout_alignEnd="@+id/textViewSegundo"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/textViewTerceiro" />
    </LinearLayout>

</RelativeLayout>
